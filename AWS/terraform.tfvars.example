# Example Terraform variables file
# Copy this to terraform.tfvars and modify with your values

aws_region         = "us-east-1"
project_name       = "ec2-public"
vpc_cidr            = "10.0.0.0/16"
public_subnet_cidr  = "10.0.1.0/24"
instance_type       = "t2.micro"

# IMPORTANT: For production, restrict SSH access to your IP
# Change from ["0.0.0.0/0"] to your specific IP
allowed_ssh_cidr = ["0.0.0.0/0"]  # WARNING: Allows SSH from anywhere
